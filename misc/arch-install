#uncomment below lines
-------------------------------
unix_sock_group = "libvirt"
unix_sock_rw_perms = "0770"
-------------------------------

systemctl enable libvirtd
systemctl start libvirtd
#newgrp libvirt
usermod -aG libvirt dev
vagrant plugin install vagrant-libvirt

